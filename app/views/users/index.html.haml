.container
  .col-md-6.col-md-offset-3
    .panel.panel-primary
      .panel-heading
        %h3.panel-title Create a user
      .panel-body
        = form_for :user do |f|
          .form-group
            = f.label :name
            = f.text_field :name, class: 'form-control'
          = f.submit 'Save', class: 'btn btn-default'

.container
  .col-md-6.col-md-offset-3
    .panel.panel-primary
      .panel-heading
        %h3.panel-title Users
      %table.table
        %thead
          %th.text-center Name
          %th.text-center Edit
          %th.text-center Delete
        %tbody
          - @users.each do |user|
            %tr
              = form_for :user, url: user_path(user), method: :put do |f|
                = f.hidden_field :id, value: user.id
                %td.text-center= f.text_field :name, value: user.name, class: 'form-control'
                %td.text-center= f.submit 'Save', class: 'btn btn-warning'
                %td.text-center= link_to 'delete', user, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } 
