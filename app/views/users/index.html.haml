.container
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading
        %h3.panel-title Create a user
      .panel-body
        = form_for :user do |f|
          .form-group
            = f.label :name
            = f.text_field :name, class: 'form-control'
          = f.submit 'Save', class: 'btn btn-default'

.container
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading
        %h3.panel-title Users
      .panel-body
        %table.table.table-bordered
          %thead
            %th.text-center id
            %th.text-center Name
          %tbody
            - @users.each do |user|
              %tr
                %td.text-center= user.id
                %td.text-center= user.name
                %td.text-center= link_to 'delete', user, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } 
