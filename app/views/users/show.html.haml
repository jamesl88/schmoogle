.container
  .col-md-8.col-md-offset-2
    .panel.panel-primary
      .panel-heading
        %h3.panel-title Create an event
      .panel-body
        = form_for :event, url: events_path do |f|
          = f.hidden_field :user_id, value: params[:id]
          .form-group
            = f.label :name
            = f.text_field :name, class: 'form-control'
          .form-group
            = f.label :date
            = f.text_field :date, class: 'datetime-picker form-control', autocomplete: false
          = f.submit 'Save', class: 'btn btn-default'

.container
  .col-md-8.col-md-offset-2
    .panel.panel-primary
      .panel-heading
        %h3.panel-title Events
      %table.table
        %thead
          %th.text-center ID
          %th.text-center Name
          %th.text-center date
          %th.text-center Edit
          %th.text-center Delete
        %tbody
          - @events.each do |event|
            %tr
              = form_for :event, url: event_path(event), method: :put do |f|
                %td.text-center= link_to event.id, event_path(event)
                %td.text-center= f.text_field :name, value: event.name, class: 'form-control'
                %td.text-center= f.text_field :date, class: 'datetime-picker form-control', value: event.date.strftime("%d-%m-%Y")
                %td.text-center= f.submit 'Save', class: 'btn btn-warning'
                %td.text-center= link_to 'delete', event, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } 
